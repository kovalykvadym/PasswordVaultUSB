<UserControl x:Class="PasswordVaultUSB.Controls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300">

    <Border Background="White" 
            BorderBrush="#DDDDDD" 
            BorderThickness="1" 
            CornerRadius="5"
            Padding="5">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <PasswordBox x:Name="PasswordBoxInput"
                         Grid.Column="0"
                         BorderThickness="0"
                         Background="Transparent"
                         VerticalContentAlignment="Center"
                         FontFamily="Consolas"
                         FontSize="14"
                         PasswordChanged="PasswordBox_PasswordChanged" />

            <TextBox x:Name="TextBoxInput"
                     Grid.Column="0"
                     BorderThickness="0"
                     Background="Transparent"
                     VerticalContentAlignment="Center"
                     FontFamily="Consolas"
                     FontSize="14"
                     Visibility="Collapsed"
                     TextChanged="TextBox_TextChanged" />

            <Button Grid.Column="1"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="ToggleVisibility_Click"
                    Margin="5,0,0,0">
                <Image x:Name="EyeIcon"
                       Source="/Resources/visibility.png"
                       Width="20"
                       Height="20"
                       Opacity="0.6"/>
            </Button>
        </Grid>
    </Border>
</UserControl>