<Window
    x:Class="PasswordVaultUSB.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Title="Settings"
    Width="600"
    Height="550"
    ResizeMode="NoResize"
    Style="{StaticResource WindowStyle}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid Background="{StaticResource WindowBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Padding="20"
            Background="White"
            BorderBrush="{StaticResource LightBorderBrush}"
            BorderThickness="0,0,0,1">
            <StackPanel>
                <TextBlock Style="{StaticResource SectionTitleStyle}" Text="Settings" />
                <TextBlock
                    Margin="0,5,0,0"
                    Style="{StaticResource DescriptionTextStyle}"
                    Text="Configure your PVault preferences" />
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <Border
                    Padding="15"
                    Background="White"
                    BorderBrush="{StaticResource LightBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SubHeaderStyle}" Text="Security" />
                        <Separator Margin="0,10,0,15" Background="{StaticResource LightBorderBrush}" />

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource TextPrimaryBrush}"
                                    Text="Auto-lock timeout" />
                                <TextBlock
                                    Margin="0,3,0,0"
                                    Style="{StaticResource DescriptionTextStyle}"
                                    Text="Lock vault after period of inactivity (minutes)" />
                            </StackPanel>

                            <ComboBox
                                Grid.Column="1"
                                Width="120"
                                VerticalAlignment="Center"
                                SelectedValue="{Binding AutoLockTimeout}"
                                SelectedValuePath="Tag">

                                <ComboBoxItem Content="1 minute">
                                    <ComboBoxItem.Tag>
                                        <sys:Int32>1</sys:Int32>
                                    </ComboBoxItem.Tag>
                                </ComboBoxItem>

                                <ComboBoxItem Content="5 minutes">
                                    <ComboBoxItem.Tag>
                                        <sys:Int32>5</sys:Int32>
                                    </ComboBoxItem.Tag>
                                </ComboBoxItem>

                                <ComboBoxItem Content="15 minutes">
                                    <ComboBoxItem.Tag>
                                        <sys:Int32>15</sys:Int32>
                                    </ComboBoxItem.Tag>
                                </ComboBoxItem>

                                <ComboBoxItem Content="30 minutes">
                                    <ComboBoxItem.Tag>
                                        <sys:Int32>30</sys:Int32>
                                    </ComboBoxItem.Tag>
                                </ComboBoxItem>

                                <ComboBoxItem Content="Never">
                                    <ComboBoxItem.Tag>
                                        <sys:Int32>0</sys:Int32>
                                    </ComboBoxItem.Tag>
                                </ComboBoxItem>
                            </ComboBox>
                        </Grid>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource TextPrimaryBrush}"
                                    Text="USB check interval" />
                                <TextBlock
                                    Margin="0,3,0,0"
                                    Style="{StaticResource DescriptionTextStyle}"
                                    Text="How often to check if USB is connected (seconds)" />
                            </StackPanel>

                            <ComboBox
                                Grid.Column="1"
                                Width="120"
                                VerticalAlignment="Center"
                                SelectedValue="{Binding UsbCheckInterval}"
                                SelectedValuePath="Tag">
                                <ComboBoxItem Content="1 second">
                                    <ComboBoxItem.Tag>
                                        <sys:Int32>1</sys:Int32>
                                    </ComboBoxItem.Tag>
                                </ComboBoxItem>
                                <ComboBoxItem Content="3 seconds">
                                    <ComboBoxItem.Tag>
                                        <sys:Int32>3</sys:Int32>
                                    </ComboBoxItem.Tag>
                                </ComboBoxItem>
                                <ComboBoxItem Content="5 seconds">
                                    <ComboBoxItem.Tag>
                                        <sys:Int32>5</sys:Int32>
                                    </ComboBoxItem.Tag>
                                </ComboBoxItem>
                                <ComboBoxItem Content="10 seconds">
                                    <ComboBoxItem.Tag>
                                        <sys:Int32>10</sys:Int32>
                                    </ComboBoxItem.Tag>
                                </ComboBoxItem>
                            </ComboBox>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource TextPrimaryBrush}"
                                    Text="Auto-clear clipboard" />
                                <TextBlock
                                    Margin="0,3,0,0"
                                    Style="{StaticResource DescriptionTextStyle}"
                                    Text="Automatically clear clipboard after copying password" />
                            </StackPanel>
                            <CheckBox
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                IsChecked="{Binding AutoClearClipboard}" />
                        </Grid>
                    </StackPanel>
                </Border>

                <Border
                    Margin="0,15,0,0"
                    Padding="15"
                    Background="White"
                    BorderBrush="{StaticResource LightBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SubHeaderStyle}" Text="Display" />
                        <Separator Margin="0,10,0,15" Background="{StaticResource LightBorderBrush}" />

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource TextPrimaryBrush}"
                                    Text="Show passwords on copy" />
                                <TextBlock
                                    Margin="0,3,0,0"
                                    Style="{StaticResource DescriptionTextStyle}"
                                    Text="Briefly show password when copying to clipboard" />
                            </StackPanel>
                            <CheckBox
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                IsChecked="{Binding ShowPasswordOnCopy}" />
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource TextPrimaryBrush}"
                                    Text="Confirm deletions" />
                                <TextBlock
                                    Margin="0,3,0,0"
                                    Style="{StaticResource DescriptionTextStyle}"
                                    Text="Ask for confirmation before deleting entries" />
                            </StackPanel>
                            <CheckBox
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                IsChecked="{Binding ConfirmDeletions}" />
                        </Grid>
                    </StackPanel>
                </Border>

                <Border
                    Margin="0,15,0,0"
                    Padding="15"
                    Background="White"
                    BorderBrush="{StaticResource LightBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SubHeaderStyle}" Text="Data Management" />
                        <Separator Margin="0,10,0,15" Background="{StaticResource LightBorderBrush}" />

                        <Button
                            Height="36"
                            Margin="0,0,0,10"
                            Command="{Binding ExportCommand}"
                            Content="Export Vault Data"
                            Style="{StaticResource ModernButtonStyle}" />

                        <Button
                            Height="36"
                            Margin="0,0,0,10"
                            Command="{Binding ImportCommand}"
                            Content="Import Vault Data"
                            Style="{StaticResource ModernButtonStyle}" />

                        <Button
                            Height="36"
                            Command="{Binding ClearDataCommand}"
                            Content="Clear All Data"
                            Style="{StaticResource DangerButtonStyle}" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Border
            Grid.Row="2"
            Padding="20,15"
            Background="White"
            BorderBrush="{StaticResource LightBorderBrush}"
            BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="1"
                    Width="100"
                    Height="36"
                    Margin="0,0,10,0"
                    Background="{StaticResource TextHintBrush}"
                    Command="{Binding CancelCommand}"
                    Content="Cancel"
                    Style="{StaticResource ModernButtonStyle}" />

                <Button
                    Grid.Column="2"
                    Width="100"
                    Height="36"
                    Command="{Binding SaveCommand}"
                    Content="Save"
                    Style="{StaticResource ModernButtonStyle}" />
            </Grid>
        </Border>
    </Grid>
</Window>