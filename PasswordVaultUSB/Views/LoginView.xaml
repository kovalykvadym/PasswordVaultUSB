<Window
    x:Class="PasswordVaultUSB.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PasswordVaultUSB.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:PasswordVaultUSB.ViewModels"
    Title="Authorization"
    Width="800"
    Height="600"
    MinWidth="450"
    MinHeight="350"
    Background="{StaticResource BackgroundColor}"
    FontFamily="Segoe UI"
    Style="{StaticResource WindowStyle}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.DataContext>
        <vm:LoginViewModel />
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding
            Key="Enter"
            Command="{Binding LoginCommand}"
            CommandParameter="{Binding ElementName=PasswordInput}" />
    </Window.InputBindings>

    <Grid>
        <Border
            Width="400"
            Padding="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="White"
            CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="20"
                    Opacity="0.4"
                    ShadowDepth="5"
                    Color="#CCCCCC" />
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="15" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" HorizontalAlignment="Center">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="28"
                        FontWeight="Bold"
                        Foreground="#333333"
                        Text="Password Vault" />

                    <TextBlock
                        Margin="0,5,0,0"
                        HorizontalAlignment="Center"
                        FontSize="14"
                        Foreground="#777777"
                        Text="Login in to the system" />
                </StackPanel>

                <StackPanel Grid.Row="2">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Foreground="#555555"
                        Text="Username" />
                    <Border
                        Height="45"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        CornerRadius="5">
                        <TextBox
                            x:Name="UsernameInput"
                            Padding="10,0"
                            VerticalContentAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="16"
                            Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />
                    </Border>
                    <TextBlock
                        x:Name="UsernameErrorText"
                        Margin="2,5,0,0"
                        HorizontalAlignment="Left"
                        FontSize="13"
                        Foreground="#D8000C"
                        Text="{Binding UsernameError}"
                        TextWrapping="Wrap"
                        Visibility="{Binding IsUsernameErrorVisible, Converter={StaticResource BoolToVis}}" />
                </StackPanel>

                <StackPanel Grid.Row="4">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Foreground="#555555"
                        Text="Password" />
                    <Border
                        Height="45"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        CornerRadius="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="40" />
                            </Grid.ColumnDefinitions>

                            <PasswordBox
                                x:Name="PasswordInput"
                                Grid.Column="0"
                                Padding="10,0"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                FontFamily="Consolas"
                                FontSize="18"
                                PasswordChanged="PasswordInput_PasswordChanged" />

                            <TextBox
                                x:Name="PasswordVisible"
                                Grid.Column="0"
                                Padding="10,0"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                FontFamily="Consolas"
                                FontSize="18"
                                TextChanged="PasswordVisible_TextChanged"
                                Visibility="Collapsed" />

                            <Button
                                x:Name="TogglePasswordButton"
                                Grid.Column="1"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="TogglePasswordButton_Click"
                                Cursor="Hand">
                                <Viewbox Width="20" Height="20">
                                    <Image
                                        x:Name="EyeIcon"
                                        Opacity="0.6"
                                        Source="/Resources/visibility.png" />
                                </Viewbox>
                            </Button>
                        </Grid>
                    </Border>
                    <TextBlock
                        x:Name="PasswordErrorText"
                        Margin="2,5,0,10"
                        HorizontalAlignment="Left"
                        FontSize="13"
                        Foreground="#D8000C"
                        Text="{Binding PasswordError}"
                        TextWrapping="Wrap"
                        Visibility="{Binding IsPasswordErrorVisible, Converter={StaticResource BoolToVis}}" />
                </StackPanel>

                <Button
                    Grid.Row="6"
                    Width="200"
                    Height="45"
                    Command="{Binding LoginCommand}"
                    CommandParameter="{Binding ElementName=PasswordInput}"
                    Content="Log in"
                    Style="{StaticResource ModernButtonStyle}" />

                <Button
                    Grid.Row="7"
                    Margin="0,15,0,0"
                    HorizontalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding NavigateToRegisterCommand}"
                    Content="Don't have an account?&#xA;Register"
                    Cursor="Hand"
                    Foreground="#0078D7" />
            </Grid>
        </Border>
    </Grid>
</Window>