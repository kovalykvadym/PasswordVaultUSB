<Window
    x:Class="PasswordVaultUSB.Views.AddPasswordView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PasswordVaultUSB.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Add New Password"
    Width="800"
    Height="450"
    MinWidth="600"
    MinHeight="250"
    Background="#F0F2F5"
    Style="{StaticResource WindowStyle}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,20"
            FontSize="24"
            FontWeight="Bold"
            Foreground="#333"
            Text="Add new entry" />

        <ScrollViewer
            Grid.Row="1"
            Padding="0,0,10,0"
            VerticalScrollBarVisibility="Auto">
            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">

                    <TextBlock Style="{StaticResource LabelStyle}" Text="Service name *" />
                    <Border Style="{StaticResource InputBorderStyle}">
                        <TextBox
                            x:Name="ServiceInput"
                            Height="30"
                            VerticalContentAlignment="Center"
                            BorderThickness="0"
                            FontSize="16"
                            TextChanged="Input_TextChanged" />
                    </Border>
                    <TextBlock
                        x:Name="ServiceErrorText"
                        Style="{StaticResource ErrorTextStyle}"
                        Text="Enter the service name" />

                    <TextBlock Style="{StaticResource LabelStyle}" Text="Login / Email *" />
                    <Border Style="{StaticResource InputBorderStyle}">
                        <TextBox
                            x:Name="LoginInput"
                            Height="30"
                            VerticalContentAlignment="Center"
                            BorderThickness="0"
                            FontFamily="Consolas"
                            FontSize="16"
                            TextChanged="Input_TextChanged" />
                    </Border>
                    <TextBlock
                        x:Name="LoginErrorText"
                        Style="{StaticResource ErrorTextStyle}"
                        Text="Enter your login" />

                    <TextBlock Style="{StaticResource LabelStyle}" Text="Password *" />
                    <Border Style="{StaticResource InputBorderStyle}">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="40" />
                            </Grid.ColumnDefinitions>


                            <PasswordBox
                                x:Name="PasswordInput"
                                Grid.Column="0"
                                Height="30"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                FontFamily="Consolas"
                                FontSize="16"
                                PasswordChanged="PasswordInput_PasswordChanged" />

                            <TextBox
                                x:Name="PasswordVisible"
                                Grid.Column="0"
                                Height="30"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                FontFamily="Consolas"
                                FontSize="16"
                                TextChanged="PasswordVisible_TextCanged"
                                Visibility="Collapsed" />

                            <Button
                                x:Name="TogglePasswordButton"
                                Grid.Column="1"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="TogglePasswordButton_Click"
                                Cursor="Hand">
                                <Viewbox Width="20" Height="20">
                                    <Image
                                        x:Name="EyeIcon"
                                        Opacity="0.6"
                                        Source="/Resources/visibility.png" />
                                </Viewbox>
                            </Button>
                        </Grid>
                    </Border>
                    <TextBlock
                        x:Name="PasswordErrorText"
                        Style="{StaticResource ErrorTextStyle}"
                        Text="Enter password" />
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Style="{StaticResource LabelStyle}" Text="Website (URL)" />
                    <Border Margin="0,0,0,15" Style="{StaticResource InputBorderStyle}">
                        <TextBox
                            x:Name="UrlInput"
                            Height="30"
                            VerticalContentAlignment="Center"
                            BorderThickness="0"
                            FontSize="16"
                            Foreground="Blue"
                            TextChanged="UrlInput_TextChanged" />
                    </Border>
                    <TextBlock Style="{StaticResource LabelStyle}" Text="Notes / Description" />
                    <Border
                        Height="130"
                        Margin="0"
                        Style="{StaticResource InputBorderStyle}">
                        <TextBox
                            x:Name="NotesInput"
                            AcceptsReturn="True"
                            BorderThickness="0"
                            FontSize="14"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <StackPanel
            Grid.Row="2"
            Margin="0,20,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Margin="0,0,15,0"
                Background="Transparent"
                BorderThickness="0"
                Click="CancelButton_Click"
                Content="Cancel"
                Cursor="Hand"
                FontSize="16"
                Foreground="#777777" />

            <Button
                x:Name="SavePasswordButton"
                Width="140"
                Height="40"
                Click="AddButton_Click"
                Content="Save"
                Style="{StaticResource ModernButtonStyle}" />
        </StackPanel>
    </Grid>
</Window>
