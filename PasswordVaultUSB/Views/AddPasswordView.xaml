<Window
    x:Class="PasswordVaultUSB.Views.AddPasswordView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:PasswordVaultUSB.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PasswordVaultUSB.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding WindowTitle}"
    Width="800"
    Height="450"
    MinWidth="600"
    MinHeight="250"
    Style="{StaticResource WindowStyle}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,20"
            Style="{StaticResource SectionTitleStyle}"
            Text="{Binding WindowTitle}" />

        <ScrollViewer
            Grid.Row="1"
            Padding="0,0,10,0"
            VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">

                    <TextBlock Style="{StaticResource LabelStyle}" Text="Service name *" />
                    <Border Style="{StaticResource InputBorderStyle}">
                        <TextBox
                            x:Name="ServiceInput"
                            Style="{StaticResource BaseInputStyle}"
                            Text="{Binding Service, UpdateSourceTrigger=PropertyChanged}" />
                    </Border>
                    <TextBlock
                        x:Name="ServiceErrorText"
                        Style="{StaticResource ErrorTextStyle}"
                        Text="Enter the service name"
                        Visibility="{Binding IsServiceErrorVisible, Converter={StaticResource BoolToVis}}" />

                    <TextBlock Style="{StaticResource LabelStyle}" Text="Login / Email *" />
                    <Border Style="{StaticResource InputBorderStyle}">
                        <TextBox
                            x:Name="LoginInput"
                            FontFamily="Consolas"
                            Style="{StaticResource BaseInputStyle}"
                            Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" />
                    </Border>
                    <TextBlock
                        x:Name="LoginErrorText"
                        Style="{StaticResource ErrorTextStyle}"
                        Text="Enter your login"
                        Visibility="{Binding IsLoginErrorVisible, Converter={StaticResource BoolToVis}}" />

                    <TextBlock Style="{StaticResource LabelStyle}" Text="Password *" />
                    <controls:BindablePasswordBox
                        Height="40"
                        Margin="0,0,0,5"
                        Password="{Binding Password, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock
                        x:Name="PasswordErrorText"
                        Style="{StaticResource ErrorTextStyle}"
                        Text="Enter password"
                        Visibility="{Binding IsPasswordErrorVisible, Converter={StaticResource BoolToVis}}" />
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Style="{StaticResource LabelStyle}" Text="Website (URL)" />
                    <Border Margin="0,0,0,15" Style="{StaticResource InputBorderStyle}">
                        <TextBox
                            x:Name="UrlInput"
                            Foreground="{StaticResource LinkBrush}"
                            Style="{StaticResource BaseInputStyle}"
                            Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}" />
                    </Border>

                    <TextBlock Style="{StaticResource LabelStyle}" Text="Notes / Description" />
                    <Border
                        Height="130"
                        Margin="0"
                        Style="{StaticResource InputBorderStyle}">
                        <TextBox
                            x:Name="NotesInput"
                            AcceptsReturn="True"
                            FontSize="14"
                            Style="{StaticResource BaseInputStyle}"
                            Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <StackPanel
            Grid.Row="2"
            Margin="0,20,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Margin="0,0,15,0"
                Command="{Binding CancelCommand}"
                Content="Cancel"
                FontSize="16"
                Foreground="{StaticResource TextSecondaryBrush}"
                Style="{StaticResource LinkButtonStyle}" />

            <Button
                x:Name="SavePasswordButton"
                Width="140"
                Height="40"
                Command="{Binding SaveCommand}"
                Content="{Binding ButtonText}"
                Style="{StaticResource ModernButtonStyle}" />
        </StackPanel>
    </Grid>
</Window>