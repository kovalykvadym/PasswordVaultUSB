<Window
    x:Class="PasswordVaultUSB.Views.RegisterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PasswordVaultUSB.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Registration"
    Width="800"
    Height="600"
    MinWidth="450"
    MinHeight="350"
    Background="{StaticResource BackgroundColor}"
    FontFamily="Segoe UI"
    Style="{StaticResource WindowStyle}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Border
            Width="400"
            Padding="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="White"
            CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="20"
                    Opacity="0.4"
                    ShadowDepth="5"
                    Color="#CCCCCC" />
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="15" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="15" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />

                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" HorizontalAlignment="Center">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="26"
                        FontWeight="Bold"
                        Foreground="#333333"
                        Text="New user" />

                    <TextBlock
                        Margin="0,5,0,0"
                        HorizontalAlignment="Center"
                        FontSize="14"
                        Foreground="#777777"
                        Text="Create your own secure vault" />
                </StackPanel>

                <StackPanel Grid.Row="2">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="#777777"
                        Text="Username" />

                    <Border
                        Height="40"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        CornerRadius="5">
                        <TextBox
                            x:Name="RegUsernameInput"
                            Padding="10,0"
                            VerticalContentAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="16"
                            TextChanged="RegInput_Changed" />
                    </Border>
                    <TextBlock
                        x:Name="UsernameErrorText"
                        Style="{StaticResource ErrorTextStyle}"
                        Text="Enter username" />
                </StackPanel>

                <StackPanel Grid.Row="4">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Foreground="#555555"
                        Text="Password" />
                    <Border
                        Height="45"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        CornerRadius="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="40" />
                            </Grid.ColumnDefinitions>

                            <PasswordBox
                                x:Name="RegPasswordInput"
                                Grid.Column="0"
                                Padding="10,0"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                FontFamily="Consolas"
                                FontSize="18"
                                PasswordChanged="RegPasswordInput_PasswordChanged" />

                            <TextBox
                                x:Name="RegPasswordVisible"
                                Grid.Column="0"
                                Padding="10,0"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                FontFamily="Consolas"
                                FontSize="18"
                                TextChanged="RegPasswordVisible_TextChanged"
                                Visibility="Collapsed" />

                            <Button
                                x:Name="ToggleRegPasswordButton"
                                Grid.Column="1"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="ToggleRegPasswordButton_Click"
                                Cursor="Hand">
                                <Viewbox Width="20" Height="20">
                                    <Image
                                        x:Name="RegEyeIcon"
                                        Opacity="0.6"
                                        Source="/Resources/visibility.png" />
                                </Viewbox>
                            </Button>
                        </Grid>
                    </Border>
                    <TextBlock
                        x:Name="PasswordErrorText"
                        Style="{StaticResource ErrorTextStyle}"
                        Text="Enter password" />
                </StackPanel>

                <StackPanel Grid.Row="6">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Foreground="#555555"
                        Text="Repeat Password" />
                    <Border
                        Height="45"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        CornerRadius="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="40" />
                            </Grid.ColumnDefinitions>

                            <PasswordBox
                                x:Name="ConfPasswordInput"
                                Grid.Column="0"
                                Padding="10,0"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                FontFamily="Consolas"
                                FontSize="18"
                                PasswordChanged="RegPasswordInput_PasswordChanged" />

                            <TextBox
                                x:Name="ConfPasswordVisible"
                                Grid.Column="0"
                                Padding="10,0"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                FontFamily="Consolas"
                                FontSize="18"
                                TextChanged="RegPasswordVisible_TextChanged"
                                Visibility="Collapsed" />

                            <Button
                                x:Name="ToggleConfPasswordButton"
                                Grid.Column="1"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="ToggleRegPasswordButton_Click"
                                Cursor="Hand">
                                <Viewbox Width="20" Height="20">
                                    <Image
                                        x:Name="ConfEyeIcon"
                                        Opacity="0.6"
                                        Source="/Resources/visibility.png" />
                                </Viewbox>
                            </Button>
                        </Grid>
                    </Border>
                    <TextBlock
                        x:Name="ConfPasswordErrorText"
                        Style="{StaticResource ErrorTextStyle}"
                        Text="Confirm password" />
                </StackPanel>

                <Button
                    Grid.Row="8"
                    Height="45"
                    Click="RegisterButton_Click"
                    Content="Create account"
                    Style="{StaticResource ModernButtonStyle}" />

                <Button
                    Grid.Row="9"
                    Margin="0,15,0,0"
                    HorizontalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="BackToLogin_Click"
                    Content="Already have an account? Log in"
                    Cursor="Hand"
                    Foreground="#0078D7" />
            </Grid>
        </Border>
    </Grid>
</Window>
